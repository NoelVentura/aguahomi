---
// BaseLayout.astro - Layout principal con SEO completo para AGUAHOMI
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/globals.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonicalURL?: string;
  type?: 'website' | 'article';
}

const {
  title = 'AGUAHOMI | Aguas de Sabor Frescas y Deliciosas',
  description = 'Descubre las aguas de sabor más refrescantes y deliciosas. AGUAHOMI te ofrece bebidas naturales, frescas y llenas de sabor para cada momento del día.',
  image = '/og-image.jpg',
  canonicalURL = Astro.url.href,
  type = 'website',
} = Astro.props;

const currentPath = Astro.url.pathname;
const siteName = 'AGUAHOMI';
const fullTitle = title.includes(siteName) ? title : `${title} | ${siteName}`;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <!-- Metadatos básicos -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    
    <!-- SEO Básico -->
    <title>{fullTitle}</title>
    <meta name="description" content={description} />
    <meta name="author" content="AGUAHOMI" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site || Astro.url.origin).href} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:locale" content="es_MX" />
    
    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site || Astro.url.origin).href} />
    
    <!-- Tema y colores -->
    <meta name="theme-color" content="#14b8a6" media="(prefers-color-scheme: light)" />
    <meta name="theme-color" content="#0f172a" media="(prefers-color-scheme: dark)" />
    <meta name="msapplication-TileColor" content="#14b8a6" />
    
    <!-- Preconexiones para rendimiento -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Script para prevenir flash de tema incorrecto -->
    <script is:inline>
      // Aplicar tema antes de que se renderice la página para evitar flash
      (function() {
        const savedTheme = localStorage.getItem('theme');
        const systemPrefersDark = window.matchMedia('(prefers-color-scheme: dark)').matches;
        
        if (savedTheme === 'dark' || (!savedTheme && systemPrefersDark)) {
          document.documentElement.classList.add('dark');
        }
      })();
    </script>
    
    <!-- Slot para estilos o scripts adicionales por página -->
    <slot name="head" />
  </head>
  
  <body class="min-h-screen flex flex-col antialiased">
    <!-- Skip to content link para accesibilidad -->
    <a 
      href="#main-content" 
      class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 
             bg-agua-500 text-white px-4 py-2 rounded-lg z-[100]
             focus:outline-none focus:ring-4 focus:ring-agua-300"
    >
      Saltar al contenido principal
    </a>
    
    <!-- Header -->
    <Header currentPath={currentPath} />
    
    <!-- Contenido principal -->
    <main id="main-content" class="flex-grow" role="main">
      <slot />
    </main>
    
    <!-- Footer -->
    <Footer />
    
    <!-- Scripts adicionales por página -->
    <slot name="scripts" />
  </body>
</html>
